@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Technical_task.Models.Test>


@if (User.IsInRole("backend"))
{
    <h1>Tests for Backend</h1>
}
else
{
    <h1>Tests for Frontend</h1>
}

<br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => test.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => test.Type)
                    </td>
                    <td>
                        <div class = "w-75 btn-group" role="group">
                            <a asp-controller="Home" asp-action="Test" asp-route-id="@test.Id"
                    class ="btn btn-dark mx-4"> <i class="bi bi-pen"></i> Start </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

